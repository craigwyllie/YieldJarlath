{
  "name": "gilts-monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "postinstall": "npm install --prefix backend && npm install --prefix frontend",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm start --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
